<AuthorizeView>
    <Authorized>
        <BarDropdown RightAligned>
            <BarDropdownToggle>@_userDisplayName</BarDropdownToggle>
            <BarDropdownMenu Background="Background.Dark"
                             TextColor="TextColor.Light"
                             Shadow="Shadow.Default">
                @if (IsAdminRole())
                {
                    <BarDropdownItem To="admin/manage" Title="admin">
                        Admin Actions <Icon Name="IconName.UserPlus" />
                    </BarDropdownItem>
                }
                <BarDropdownItem Background="Background.Dark"
                                 Title="Manage User Profile"
                                 TextAlignment="TextAlignment.Center"
                                 To="user/manage"
                                 TextColor="TextColor.Info"
                                 TextWeight="TextWeight.Bold">
                    Account <Icon Name="IconName.User" />
                </BarDropdownItem>
                <BarDropdownDivider Background="Background.Light" />
                <BarDropdownItem Background="Background.Dark"
                                 Title="Logout User"
                                 TextAlignment="TextAlignment.Center">
                    <Form method="post" action="Account/LogoutInternal">
                        <Button Type="ButtonType.Submit"
                                Color="Color.Danger"
                                TextColor="TextColor.Light">
                            Log out <Icon Name="@("fa-arrow-right-from-bracket")"></Icon>
                        </Button>
                    </Form>
                </BarDropdownItem>
            </BarDropdownMenu>
        </BarDropdown>
    </Authorized>
    <NotAuthorized>
        <Button Type="ButtonType.Link"
                Color="Color.Success"
                TextWeight="TextWeight.Bold"
                To="/auth/login">
            Log in <Icon Name="@("fa-right-to-bracket")" />
        </Button>
    </NotAuthorized>
</AuthorizeView>