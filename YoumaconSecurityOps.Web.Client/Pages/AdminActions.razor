@page "/admin"
<PageTitle>Admin View</PageTitle>

<Container Fluid 
           Background="Background.Dark" 
           TextColor="TextColor.Light"
           Margin="Margin.Is2.OnY"
           Border="Border.Is3.Light.OnAll.Rounded"
           Shadow="Shadow.Large">
    <Row Margin="Margin.Is3.OnY.Is2.OnX"
        Flex="Flex.Row.JustifyContent.Around">
        <Column ColumnSize="ColumnSize.IsThird">
            <Card Background="Background.Transparent"
                  Border="Border.Is2.Light.OnAll.Rounded">
                <CardTitle>
                    Unresolved Incidents
                </CardTitle>
                <CardBody>

                </CardBody>
            </Card>
        </Column>
        <Column ColumnSize="ColumnSize.IsThird">
            <Card Background="Background.Transparent"
                  Border="Border.Is2.Light.OnAll.Rounded">
                <CardTitle>
                    Radio Status
                </CardTitle>
                <CardBody>

                </CardBody>
            </Card>
        </Column>
        <Column ColumnSize="ColumnSize.IsThird">
            <Card Background="Background.Transparent"
                  Border="Border.Is2.Light.OnAll.Rounded">
                <CardTitle>
                    Current Staff at Locations
                </CardTitle>
                <CardBody>
                    <ListGroup Flush Background="Background.Transparent" TextColor="TextColor.Light">
                        <Repeater TItem="Location" Items="@_locations">
                            <ListGroupItem 
                                Background="Background.Transparent" 
                                TextColor="TextColor.Light" 
                                Name="@context.Id.ToString()" 
                                TextAlignment="TextAlignment.Start"
                                Border="Border.Is2.Light.OnBottom.RoundedBottom">
                                @context.Name
                                <Badge Color="Color.Primary" Border="Border.Is2.Light.OnAll.RoundedPill" Margin="Margin.Is3.FromStart">
                                    @GetTotalStaffAtLocation(context.Id)
                                </Badge>
                            </ListGroupItem>
                        </Repeater>
                    </ListGroup>
                </CardBody>
            </Card>
        </Column>
    </Row>
    <Row Margin="Margin.Is3.OnY">
        <Column ColumnSize="ColumnSize.Is12">
            <Card Background="Background.Transparent"
                  Border="Border.Is2.Light.OnAll.Rounded">
                <CardTitle>
                    Dynamic Shift Assignment
                </CardTitle>
                <CardBody>

                </CardBody>
            </Card>
        </Column>
    </Row>
</Container>