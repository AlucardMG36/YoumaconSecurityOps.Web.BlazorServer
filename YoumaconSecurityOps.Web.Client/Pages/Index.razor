@page "/"
<Jumbotron Background="Background.Dark" Border="Border.Rounded" TextColor="TextColor.Light" Margin="Margin.Is2.FromTop.OnDesktop.Is1.FromTop.OnMobile">
    <JumbotronTitle Size="JumbotronTitleSize.Is4">Hello, Security Staff!</JumbotronTitle>
    <JumbotronSubtitle>
        Welcome to Sec Ops!
    </JumbotronSubtitle>
    <Divider />
    <Paragraph>
        Pick any navigation on the side-menu to get started
    </Paragraph>
</Jumbotron>
<Container Fluid
           Flex="Flex.Column.JustifyContent.Center.OnWidescreen"
           Margin="Margin.Is2.OnY.Is3.OnX.OnDesktop"
           Background="Background.Dark"
           TextColor="TextColor.Light">
    <Heading Size="HeadingSize.Is6" TextColor="TextColor.White50" Italic>
        Your upcoming shifts are
    </Heading>
    @if (!_isLoading && _shiftsForStaffMember?.Any() == true)
    {
        <ListGroup Flush Flex="Flex.InlineFlex.JustifyContent.Between" TextOverflow="TextOverflow.NoWrap">
            <ListGroupItem Background="Background.Dark" TextColor="TextColor.Light" Border="Border.Is2.Dark.OnBottom.RoundedBottom" Shadow="Shadow.Default">
                <Fields>
                    <Field>
                        <Heading Size="HeadingSize.Is2">Starts At</Heading>
                    </Field>
                    <Field>
                        <Heading Size="HeadingSize.Is2">Location</Heading>
                    </Field>
                    <Field>
                        <Heading Size="HeadingSize.Is2">Type & Role</Heading>
                    </Field>
                </Fields>
            </ListGroupItem>
            <Repeater TItem="ShiftReader" Items="_shiftsForStaffMember">
                <ListGroupItem Background="Background.Dark" TextColor="TextColor.Light" Margin="Margin.Is2.OnY.OnWidescreen.Is3.OnY.OnMobile" Border="Border.Is2.Light.OnAll.Rounded" Shadow="Shadow.Default">
                    <Fields>
                        <Field>
                            <Paragraph TextWeight="TextWeight.Bold" TextTransform="TextTransform.Capitalize" TextOverflow="TextOverflow.Wrap">@context.StartAt.ToString("f")</Paragraph>
                        </Field>
                        <Field>
                            <Paragraph TextWeight="TextWeight.Bold" TextTransform="TextTransform.Capitalize">@context.StartingLocationNavigation.Name</Paragraph>
                        </Field>
                        <Field>
                            <Tooltip Text="@($"{context.StaffMember.StaffType?.Description}{Environment.NewLine}{context.StaffMember.Role?.Name}")" Inline Placement="TooltipPlacement.TopEnd">
                                <Paragraph TextWeight="TextWeight.Bold" TextTransform="TextTransform.Capitalize">@context.StaffMember.StaffType?.Title : @context.StaffMember.Role?.Name</Paragraph>
                            </Tooltip>
                        </Field>
                    </Fields>
                </ListGroupItem>
            </Repeater>
        </ListGroup>
    }
</Container>