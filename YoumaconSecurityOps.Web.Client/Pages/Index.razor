@page "/"
<PageTitle>Ops Home</PageTitle>
<Jumbotron Background="Background.Dark"
           Border="Border.Is3.Light.OnAll.Rounded"
           TextColor="TextColor.Light" 
           Margin="Margin.Is2.FromTop.OnWidescreen.Is1.FromTop.OnMobile"
           Shadow="Shadow.Large">
    <JumbotronTitle Size="JumbotronTitleSize.Is4">Hello, Security Staff!</JumbotronTitle>
    <JumbotronSubtitle>
        Welcome to Sec Ops!
    </JumbotronSubtitle>
    <Divider TextColor="TextColor.White50" />
    <Paragraph>
        Pick any navigation on the side-menu to get started
    </Paragraph>
</Jumbotron>
<Container Fluid
           Flex="Flex.Column.JustifyContent.Center.OnWidescreen"
           Background="Background.Dark"
           Border="Border.Is2.Rounded.Light.OnAll"
           Shadow="Shadow.Default"
           Margin="Margin.Is2.OnAll.OnWidescreen.Is1.OnAll.OnMobile"
           TextColor="TextColor.Light">
    <Row>
        <Column ElementId="#col-animate-1"  ColumnSize="ColumnSize.IsThird">
            <Animate Anchor="col-animate-1" Animation="Animations.FlipUp" DelayMilliseconds="500">
            <Card Background="Background.Transparent"
                  Border="Border.Is2.Light.OnAll.Rounded"
                  Shadow="Shadow.Default">
                <CardTitle Size="5" TextColor="TextColor.Light">
                Estimated Hours Volunteered
                </CardTitle>
            </Card>
            </Animate>
        </Column>
        <Column ElementId="#col-animate-2" ColumnSize="ColumnSize.Is5">
            <Animate Anchor="#col-animate-2" Animation="Animations.FlipUp" DelayMilliseconds="500">
            <Card Background="Background.Transparent"
                  Border="Border.Is2.Light.OnAll.Rounded"
                  Shadow="Shadow.Default">
                <CardTitle Size="3" TextColor="TextColor.Light">
                    Unresolved Incidents you're associated with
                </CardTitle>
            </Card>
            </Animate>
        </Column>
        <Column ElementId="#col-animate-3" ColumnSize="ColumnSize.IsQuarter">
            <Animate Anchor="#col-animate-3" Auto Animation="Animations.FlipUp" DelayMilliseconds="500">
            <Card Background="Background.Transparent"
                  Border="Border.Is2.Light.OnAll.Rounded"
                  Shadow="Shadow.Default">
                <CardBody>
                    <Heading Size="HeadingSize.Is6"
                             TextColor="TextColor.White50"
                             Italic>
                        Your upcoming shifts are
                    </Heading>
                </CardBody>
            </Card>
            </Animate>
        </Column>
    </Row>
    
</Container>