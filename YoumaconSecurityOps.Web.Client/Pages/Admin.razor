@page "/admin"

<DropContainer TItem="StaffReader" Items="@_staff" ItemsFilter="@OnItemFilter" ItemDropped="@OnItemDropped" Flex="Flex.Wrap.Grow.Is1">
    <ChildContent>
        @foreach (var location in _locations)
        {
            <DropZone TItem="LocationReader" Name="@nameof(LocationReader.Name)" DropAllowed="@((item) => !item.IsHotel)" Border="Border.Rounded" Background="Background.Light" Padding="Padding.Is3" Margin="Margin.Is3" Flex="Flex.Grow.Is1">
                <Heading Size="HeadingSize.Is4" Margin="Margin.Is3.FromBottom">@location.Name</Heading>
            </DropZone>
        }
    </ChildContent>
    <ItemTemplate>
        <Card Shadow="Shadow.Default" Margin="Margin.Is3.OnY">
            <CardBody>
                <Blazorise.Icon IconSize="IconSize.Large" IconStyle="IconStyle.Solid" Name="IconName.UserCheck" />
                <CardText> @context.Contact.LastName, @context.Contact.PreferredName </CardText>
            </CardBody>
        </Card>
    </ItemTemplate>
</DropContainer>
