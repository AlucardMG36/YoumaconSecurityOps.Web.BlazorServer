<Bar Background="Background.Dark"
     Breakpoint="Breakpoint.Desktop"
     ThemeContrast="ThemeContrast.Dark"
     Shadow="Shadow.Default"
     Border="Border.Dark.OnTop.RoundedTop.Is1">
    <BarMenu>
        <BarStart>
            <BarItem>
                <Text TextWeight="TextWeight.Light" Italic TextColor="TextColor.White50">
                    <Blazorise.Icon Name="IconName.Code" IconSize="IconSize.ExtraSmall" IconStyle="IconStyle.Light" />
                    Version @AssemblyProductVersion
                </Text>
            </BarItem>
            <BarItem Margin="Margin.Is1.OnX.OnDesktop.Is2.OnX.OnMobile">
                <Text TextWeight="TextWeight.Light" Italic TextColor="TextColor.Muted">
                    <Blazorise.Icon Name="IconName.Copyright" IconSize="IconSize.ExtraSmall" />
                    @ApplicationDevelopmentCompany
                </Text>
            </BarItem>
        </BarStart>
        <BarEnd>
            <BarItem Margin="Margin.Is2.OnX.OnDesktop.Is3.OnX.OnMobile" VerticalAlignment="VerticalAlignment.Middle">
                <Text TextWeight="TextWeight.Light" TextColor="TextColor.White50" TextAlignment="TextAlignment.Center">
                    Welcome: @_username
                </Text>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>