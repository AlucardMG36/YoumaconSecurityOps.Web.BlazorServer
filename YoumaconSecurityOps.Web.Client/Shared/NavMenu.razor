<Bar Breakpoint="Breakpoint.Desktop" NavigationBreakpoint="Breakpoint.Tablet" ThemeContrast="ThemeContrast.Dark"
     Mode="BarMode.VerticalInline" CollapseMode="BarCollapseMode.Small">
    <BarToggler />
    <BarBrand>
        <BarItem>
            <BarLink To="">
                <BarIcon IconName="@_ysecIcon" />
            </BarLink>
        </BarItem>
    </BarBrand>
    <BarMenu>
        <BarStart>
            <BarItem>
                <Divider />
                <BarLink To="">
                    <BarIcon IconName="IconName.Dashboard" />
                    Home
                </BarLink>
            </BarItem>
            <Divider />
            <BarItem>
                <BarLink To="/staff">
                    <BarIcon IconName="IconName.Users" />
                    Staff
                </BarLink>
            </BarItem>
            <Divider />
            <BarItem>
                <BarLink To="/admin">
                    <BarIcon IconName="IconName.UserPlus" />
                    Admin Actions
                </BarLink>
                <Divider />
            </BarItem>
            <BarItem>
                <BarLink To="/shiftlog">
                    <BarIcon IconName="IconName.CalendarWeek" />
                    Shifts
                </BarLink>
                <Divider />
            </BarItem>
            <BarItem>
                <BarLink To="/incidents">
                    <BarIcon IconName="IconName.Rss" />
                    Incidents
                </BarLink>
                <Divider />
            </BarItem>
            <BarItem>
                <BarLink To="/radio-schedule">
                    <BarIcon IconName="IconName.Headset" />
                    Radio Assignments
                </BarLink>
                <Divider />
            </BarItem>
            <BarItem>
                <BarLink To="/room-schedule">
                    <BarIcon IconName="IconName.Hotel" />
                    Room Schedule
                </BarLink>
                <Divider />
            </BarItem>
        </BarStart>
        <BarEnd>
            <BarItem Flex="Flex.InlineFlex.AlignItems.Center.AlignContent.Start.JustifyContent.Center">
                <Blazorise.Link To="">
                    <BarIcon IconName="_faceBookIcon"></BarIcon>
                </Blazorise.Link>
                <Blazorise.Link To="">
                    <BarIcon IconName="_discordIcon"></BarIcon>
                </Blazorise.Link>
            </BarItem>
        </BarEnd>
    </BarMenu>
</Bar>

@code
{
    private RenderFragment _ysecIcon =@<img data-src="/ysecShield.svg" width="64" height="64" data-sizes="auto" alt="Ysec Shield Emblem" class="img-fluid lazyload" />;

    private RenderFragment _discordIcon =@<i class="fab fa-discord"></i>;

    private RenderFragment _faceBookIcon =@<i class="fab fa-facebook-square"></i>;
}
