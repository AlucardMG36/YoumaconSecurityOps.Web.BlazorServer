@if (IsLoading)
{
    <Container Fluid>
        <SpinKit Type="SpinKitType.Chase" Centered Color="#FC9CFB" Size="3em" />
    </Container>
}
else
{
    @ChildContent
}

@code {

    [Parameter] public Boolean IsLoading { get; set; } = true;
    [Parameter] public RenderFragment ChildContent { get; set; }
}
