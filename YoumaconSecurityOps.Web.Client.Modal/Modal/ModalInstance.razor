<!-- Modal -->
<Blazorise.Bootstrap.Modal @ref="@_modalReference">
    <Blazorise.Bootstrap.ModalContent Size="ModalSize.Small" Centered="true">
        <ModalHeader>
            <ModalTitle>
                @Title
            </ModalTitle>
            @if (!IsCloseButtonHidden)
            {
                <Blazorise.Bootstrap.CloseButton/>
            }
        </ModalHeader>
        <ModalBody>
            <CascadingValue Value="this">
                @BodyContent
            </CascadingValue>
        </ModalBody>
        <ModalFooter>
            <Blazorise.Bootstrap.Button Color="Color.Secondary" Clicked="async () => await Close()">Close</Blazorise.Bootstrap.Button>
        </ModalFooter>
    </Blazorise.Bootstrap.ModalContent>
</Blazorise.Bootstrap.Modal>